{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "cwd": "${fileDirname}",
  "configurations": [
    {
      "name": "serve demo app",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start:demo-app",
      "url": "http://localhost:4200/"
    },
    {
      "name": "serve mywork app",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start:my-work",
      "url": "http://localhost:4200/"
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${cwd}"
      }
    }
  ]
}
