{
  "name": "viz-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/viz-components/src",
  "prefix": "vic",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "options": {
        "project": "libs/viz-components/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/viz-components/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/viz-components/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production",
      "outputs": ["{workspaceRoot}/dist/viz-components"]
    },
    "build-release": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nx build viz-components"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ./dist/viz-components && npm publish && git push --tags"
      }
    },
    "github-release": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "main": "libs/viz-components/src/test.ts",
        "tsConfig": "libs/viz-components/tsconfig.spec.json",
        "karmaConfig": "libs/viz-components/karma.conf.js",
        "browsers": "ChromeHeadlessNoSandbox",
        "watch": false
      }
    },
    "lint": {
      "executor": "@angular-eslint/builder:lint",
      "options": {
        "lintFilePatterns": [
          "libs/viz-components/**/*.ts",
          "libs/viz-components/**/*.html"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },
    "component-test": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "libs/viz-components/cypress.config.ts",
        "testingType": "component",
        "skipServe": true,
        "devServerTarget": "demo-app:build:production"
      }
    },
    "cypress-local": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd libs/viz-components && npx cypress open"
      }
    },
    "create-changelog": {
      "executor": "nx:run-commands",
      "options": {
        "command": "touch libs/viz-components/CHANGELOG.md"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "skipCommit": true,
        "skipRootChangelog": true,
        "postTargets": ["build-release", "publish", "github-release"],
        "skipCommitTypes": ["build", "ci", "docs", "refactor", "style", "test"]
      }
    },
    "beta-version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "skipCommit": true,
        "skipRootChangelog": true,
        "releaseAs": "prerelease",
        "tagPrefix": "beta/{projectName}@",
        "preid": "beta",
        "postTargets": ["build-release", "publish"],
        "skipCommitTypes": ["build", "ci", "docs", "refactor", "style", "test"]
      }
    }
  }
}
