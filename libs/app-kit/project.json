{
  "name": "app-kit",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/app-kit/src",
  "prefix": "adk",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "options": {
        "project": "libs/app-kit/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/app-kit/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/app-kit/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production",
      "outputs": [
        "{workspaceRoot}/dist/app-kit"
      ]
    },
    "build-release": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nx build app-kit"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ./dist/app-kit && npm publish --access public && git push --tags"
      }
    },
    "github-release": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "tsConfig": "libs/app-kit/tsconfig.spec.json",
        "polyfills": [
          "zone.js",
          "zone.js/testing"
        ],
        "browsers": "ChromeHeadlessNoSandbox",
        "watch": false
      }
    },
    "lint": {
      "executor": "@angular-eslint/builder:lint",
      "options": {
        "lintFilePatterns": [
          "libs/app-kit/**/*.ts",
          "libs/app-kit/**/*.html"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "create-changelog": {
      "executor": "nx:run-commands",
      "options": {
        "command": "touch libs/app-kit/CHANGELOG.md"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "skipCommit": true,
        "skipRootChangelog": true,
        "postTargets": [
          "build-release",
          "publish",
          "github-release"
        ],
        "skipCommitTypes": [
          "build",
          "ci",
          "docs",
          "refactor",
          "style",
          "test"
        ]
      }
    }
  }
}