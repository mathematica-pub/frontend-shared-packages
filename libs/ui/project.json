{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/ui/src",
  "prefix": "hsi-ui",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "options": {
        "project": "libs/ui/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ui/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ui/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production",
      "outputs": [
        "{workspaceRoot}/dist/ui"
      ]
    },
    "build-release": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nx build ui"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ./dist/ui && npm publish --access public && git push --tags"
      }
    },
    "github-release": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "main": "libs/ui/src/test.ts",
        "tsConfig": "libs/ui/tsconfig.spec.json",
        "karmaConfig": "libs/ui/karma.conf.js",
        "browsers": "ChromeHeadlessNoSandbox",
        "watch": false
      }
    },
    "lint": {
      "executor": "@angular-eslint/builder:lint",
      "options": {
        "lintFilePatterns": [
          "libs/ui/**/*.ts",
          "libs/ui/**/*.html"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "component-test": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "libs/ui/cypress.config.ts",
        "testingType": "component",
        "skipServe": true,
        "devServerTarget": "demo-app:build:development"
      }
    },
    "cypress-local": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd libs/ui && npx cypress open"
      }
    },
    "create-changelog": {
      "executor": "nx:run-commands",
      "options": {
        "command": "touch libs/ui/CHANGELOG.md"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "skipCommit": true,
        "skipRootChangelog": true,
        "postTargets": [
          "build-release",
          "publish",
          "github-release"
        ],
        "skipCommitTypes": [
          "build",
          "ci",
          "docs",
          "refactor",
          "style",
          "test"
        ]
      }
    }
  }
}