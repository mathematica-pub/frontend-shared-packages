{
  "root": false,
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "projects/viz-components/tsconfig.lib.json",
          "projects/viz-components/tsconfig.spec.json"
        ],
        "createDefaultProgram": true
      },
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "vic",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "vic",
            "style": "kebab-case"
          }
        ],
        "@angular-eslint/no-inputs-metadata-property": "warn"
      }
    }
  ]
}
