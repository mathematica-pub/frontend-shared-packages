{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsExtend",
  "title": "Extend Viz Component",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of this component",
      "type": "string",
      "pattern": "^(?:@[a-zA-Z0-9-*~][a-zA-Z0-9-*._~]*/)?[a-zA-Z0-9-~][a-zA-Z0-9-._~]*$",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What should this component be named?"
    },
    "extend": {
      "description": "Name of the component to extend",
      "x-prompt": "What component would you like to extend?",
      "type": "string",
      "enum": [
        "xOrdinalAxis",
        "xQuantitativeAxis",
        "yOrdinalAxis",
        "yQuantitativeAxis",
        "bars",
        "chart",
        "geographies",
        "groupedBars",
        "lines",
        "mapChart",
        "mapLegend",
        "stackedArea",
        "stackedBars",
        "xyBackground",
        "xyChart"
      ],
      "items": [
        { "value": "x-ordinal-axis", "label": "x ordinal axis" },
        { "value": "x-quantitative-axis", "label": "x quantitative axis" },
        { "value": "y-ordinal-axis", "label": "y ordinal axis" },
        { "value": "y-quantitative-axis", "label": "y quantitative axis" },
        { "value": "bars", "label": "bars" },
        { "value": "chart", "label": "chart" },
        { "value": "geographies", "label": "geographies" },
        { "value": "grouped-bars", "label": "grouped bars" },
        { "value": "lines", "label": "lines" },
        { "value": "map-chart", "label": "map chart" },
        { "value": "map-legend", "label": "map legend" },
        { "value": "stacked-area", "label": "stacked area" },
        { "value": "stacked-bars", "label": "stacked bars" },
        { "value": "xy-background", "label": "xy background" },
        { "value": "xy-chart", "label": "xy chart" }
      ]
    },
    "path": {
      "type": "string",
      "format": "path",
      "$default": {
        "$source": "workingDirectory"
      },
      "description": "The path at which to create the component file, relative to the current workspace. Default is a folder with the same name as the component in the project root.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    }
  },
  "required": ["name", "extend"]
}
