{
  "name": "app-dev-kit",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "projects/app-dev-kit/src",
  "prefix": "adk",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "options": {
        "project": "projects/app-dev-kit/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "projects/app-dev-kit/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "projects/app-dev-kit/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production",
      "outputs": ["{workspaceRoot}/dist/app-dev-kit"]
    },
    "build-release": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nx build app-dev-kit"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ./dist/app-dev-kit && npm publish && git push --tags"
      }
    },
    "github-release": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "tsConfig": "projects/app-dev-kit/tsconfig.spec.json",
        "polyfills": ["zone.js", "zone.js/testing"],
        "browsers": "ChromeHeadlessNoSandbox",
        "watch": false
      }
    },
    "lint": {
      "executor": "@angular-eslint/builder:lint",
      "options": {
        "lintFilePatterns": [
          "projects/app-dev-kit/**/*.ts",
          "projects/app-dev-kit/**/*.html"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "skipCommit": true,
        "postTargets": ["build-release", "publish", "github-release"],
        "skipCommitTypes": ["build", "ci", "docs", "refactor", "style", "test"]
      }
    }
  }
}
